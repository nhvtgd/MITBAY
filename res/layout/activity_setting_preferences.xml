<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:padding="10sp"  >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- User Name -->

        <LinearLayout style="@style/CommonLinearLayout" >

            <ImageView
                android:id="@+id/UserPhotoIcon"
                style="@style/ImageViewForSettingPreferences"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/UserName"
                style="@style/TextForSettingPreferences"
                android:text="Duy Ha" />
        </LinearLayout>

        <View style="@style/Line" />

        <!-- Email -->

        <LinearLayout style="@style/CommonLinearLayout" >

            <ImageView
                android:id="@+id/UserEmailIcon"
                style="@style/ImageViewForSettingPreferences"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/Email"
                style="@style/TextForSettingPreferences"
                android:text="Duy Ha" />
        </LinearLayout>

        <View style="@style/Line" />

        <!-- Location -->

        <RelativeLayout style="@style/CommonLinearLayout" >

            <LinearLayout style="@style/CommonLinearLayout" >

                <ImageView
                    android:id="@+id/UserLocationIcon"
                    style="@style/ImageViewForSettingPreferences"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/Location"
                    style="@style/TextForSettingPreferences"
                    android:layout_marginRight="50sp"
                    android:text="500 Memorial Drive, Next house, #316" />
            </LinearLayout>

            <ImageView
                android:id="@+id/Edit"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0sp"
                android:src="@drawable/edit_query" 
                android:clickable="true"
                android:onClick="editLocation" 
                android:background="@drawable/btn_default_normal" />
        </RelativeLayout>
		<View style="@style/Line" />
        
		<!-- Edit Location -->
        <LinearLayout 
            android:id="@+id/FrameEditLocation"
            style="@style/CommonLinearLayout"
            android:orientation="vertical" >
            <EditText
                android:id="@+id/EditLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70sp"
                android:inputType="textMultiLine"
                />
            <Button
                android:id="@+id/ConfirmLocation"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_default_normal"
                android:text="Confirm"
                android:textColor="@color/green"
                android:textStyle="bold" 
                android:onClick="confirmEditLocation" />
            <View style="@style/Line" />
        </LinearLayout>
        
        <!-- Change password -->

        <Button
            android:id="@+id/ChangePassword"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_default_normal_disable"
            android:onClick="changePassword"
            android:padding="5sp"
            android:text="Change Password"
            android:textColor="@color/red"
            android:textStyle="bold|italic" />


        <LinearLayout
            android:id="@+id/FramePassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <View style="@style/Line" />

            <EditText
                android:id="@+id/CurrentPassword"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="current password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/NewPassword"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="new password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/NewConfirmPassword"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="new password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/ConfirmPassword"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_default_normal"
                android:onClick="confirmChangePassword"
                android:text="Confirm"
                android:textColor="@color/red"
                android:textStyle="bold" />
        </LinearLayout>

        <View style="@style/Line" />
    </LinearLayout>

</ScrollView>