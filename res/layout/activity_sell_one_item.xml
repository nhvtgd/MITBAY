<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/separation" >

        <!-- User Name -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sell_one_item_UserNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="User name" >
            </TextView>

            <TextView
                android:id="@+id/sell_one_item_UserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Duy Ha" >
            </TextView>
        </LinearLayout>

        <!-- Email -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sell_one_item_EmailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Email" >
            </TextView>

            <TextView
                android:id="@+id/sell_one_item_Email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="duyha@mit.edu" >
            </TextView>
        </LinearLayout>

        <!-- Address -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sell_one_item_AddressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Address" >
            </TextView>

            <TextView
                android:id="@+id/sell_one_item_Address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Next house, #316" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/separation"
            android:layout_marginTop="@dimen/separation"
            android:background="#cccccc" />
        <!-- Item -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sell_one_item_ItemText"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Item" >
            </TextView>

            <EditText
                android:id="@+id/sell_one_item_Item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:inputType="text" >
            </EditText>
        </LinearLayout>

        <!-- Price -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sell_one_item_PriceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Price ($)" >
            </TextView>

            <EditText
                android:id="@+id/sell_one_item_Price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>

        <!-- Category -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/sell_one_item_Quality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:entries="@array/QualityItem"
                android:prompt="@string/quality_item" >
            </Spinner>

            <Spinner
                android:id="@+id/sell_one_item_Category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:entries="@array/CategoryItem"
                android:prompt="@string/category_item" >
            </Spinner>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/separation"
            android:layout_marginTop="@dimen/separation"
            android:background="#cccccc" />
        <!-- Picture -->
        <!-- Take photo button -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/sell_one_item_AddPhotoButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:onClick="takePhoto"
                android:src="@drawable/ic_camera"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/sell_one_item_GalleryPicture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:onClick="chosePicture"
                android:src="@drawable/ic_upload"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Images -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			
            <ImageView
                android:id="@+id/sell_one_item_Piture"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:longClickable="true"
                android:src="@drawable/mit_great_dome" >
            </ImageView>
            <ImageButton
                android:id="@+id/sell_one_item_Delete"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_alignBottom="@+id/sell_one_item_Piture"
                android:layout_alignLeft="@+id/sell_one_item_Piture"
				android:src="@drawable/ic_delete" 
				android:background="#eee9e9"               
                android:onClick="deletePicture"/>
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/sell_one_item_TakePictureText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Take picture" />
            <TextView
                android:id="@+id/sell_one_item_PickPictureText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Browser" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/separation"
            android:layout_marginTop="@dimen/separation"
            android:background="#cccccc" />

        <!-- Description -->

        <EditText
            android:id="@+id/sell_one_item_Description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Add your description " />

        <!-- Button Confirmation -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:paddingTop="30sp">

            <Button
                android:id="@+id/sell_one_item_CancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10sp"
                android:textColor="@color/black"
                android:background="#cdc9c9"
                android:textStyle="bold"
                android:onClick="cancelSellTheItem"
                android:text="Cancel" />

            <Button
                android:id="@+id/sell_one_item_DoneButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"
				android:background="@color/red"
				android:textColor="@color/white"
				android:textStyle="bold"                
                android:text="Done" 
                android:onClick="doneSellTheItem"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>