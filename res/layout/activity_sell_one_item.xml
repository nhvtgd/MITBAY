<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SellOneItem" 
    android:paddingLeft="10sp"
    android:paddingBottom="10sp"
    android:textSize="15sp" 
    >

    <!-- Menu (Cancel  Done) -->
    
    <!-- Seller -->
    <TextView
        android:id="@+id/UserNameText"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="User name" 
        />
    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/UserNameText"
        android:text="Duy Ha" 
        />

    <!-- Email -->
    <TextView
        android:id="@+id/EmailText"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/UserNameText"
        android:text="Email" 
        />
    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/EmailText"
        android:layout_below="@+id/UserNameText"
        android:text="duyha@mit.edu" 
        />

 	<!-- Address -->
    <TextView
        android:id="@+id/AddressText"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/EmailText"
        android:text="Address" 
        />
    <TextView
        android:id="@+id/Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/AddressText"
        android:layout_below="@+id/EmailText"
        android:text="500 Memorial Drive #316" 
        />

    <!-- Item -->
    <TextView
        android:id="@+id/ItemText"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/AddressText"
        android:text="Item"
        />
    <EditText
        android:id="@+id/Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ItemText"
        android:layout_below="@+id/AddressText"
        android:layout_alignBottom="@+id/ItemText"
        android:layout_alignTop="@+id/ItemText"
        android:inputType="text"
        android:padding="0sp" 
        />

	<!-- Price -->
    <TextView
        android:id="@+id/PriceText"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ItemText"
        android:text="Price"
        />
    <EditText
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/PriceText"
        android:layout_below="@+id/ItemText"
        android:layout_alignBottom="@+id/PriceText"
        android:layout_alignTop="@+id/PriceText"
        android:padding="0sp" 
        android:text="$ "
        android:inputType="numberDecimal"
        />
    



    
</RelativeLayout>