<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:padding="@dimen/separation">
    
    <LinearLayout style="@style/CommonLinearLayout">
	<ImageView
	    android:id="@+id/AddRequest"
	    android:layout_width="30sp"
	    android:layout_height="30sp"
	    android:src="@drawable/ic_input_add"/>
	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical|left"
	    android:paddingLeft="@dimen/paddingLeft_for_buy"
	    android:textStyle="italic"
	    android:text="Add a request to receive notifications about an item" />
	</LinearLayout>
	
    <ListView
        android:id="@+id/RequestingItemsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>